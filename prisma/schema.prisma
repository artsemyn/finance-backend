generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  password     String
  createdAt    DateTime      @default(now())
  reminders    Reminder[]
  savingsGoals SavingsGoal[]
  transactions Transaction[]
}

model Transaction {
  id        String   @id @default(uuid())
  title     String
  amount    Float
  type      String
  category  String?
  date      DateTime
  note      String?
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model SavingsGoal {
  id            String   @id @default(uuid())
  title         String
  targetAmount  Float
  currentAmount Float    @default(0)
  deadline      DateTime
  userId        String
  createdAt     DateTime @default(now())
  autoSaveDay   Int?
  monthlyAmount Float?
  user          User     @relation(fields: [userId], references: [id])
}

model Reminder {
  id             String   @id @default(uuid())
  title          String
  amount         Float
  type           String
  dueDate        DateTime
  isPaid         Boolean  @default(false)
  repeatInterval String?
  userId         String
  createdAt      DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id])
}
